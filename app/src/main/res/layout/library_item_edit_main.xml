<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <!-- Could have changed the objects in the edit fragments but i cba -->

        <Button
            android:id="@+id/edit_title_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:backgroundTint="@color/cyan"
            android:onClick="changeEditFragment"
            android:text="Title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="What would you like to edit?"
            android:textColor="@color/white"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/edit_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/cyan"
            android:onClick="changeEditFragment"
            android:text="Date"
            app:layout_constraintEnd_toEndOf="@+id/edit_title_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/edit_title_button"
            app:layout_constraintTop_toBottomOf="@+id/edit_title_button" />

        <Button
            android:id="@+id/edit_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:backgroundTint="@color/cyan"
            android:onClick="changeEditFragment"
            android:text="Image"
            app:layout_constraintBottom_toBottomOf="@+id/edit_date_button"
            app:layout_constraintEnd_toStartOf="@+id/edit_title_button"
            app:layout_constraintTop_toTopOf="@+id/edit_title_button" />

        <Button
            android:id="@+id/edit_contents_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:backgroundTint="@color/cyan"
            android:onClick="changeEditFragment"
            android:text="Contents"
            app:layout_constraintBottom_toBottomOf="@+id/edit_date_button"
            app:layout_constraintStart_toEndOf="@+id/edit_title_button"
            app:layout_constraintTop_toTopOf="@+id/edit_title_button" />

</androidx.constraintlayout.widget.ConstraintLayout>